<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'users/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, user_path(@book.user.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>  
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        <% else %>
        <td></td>
        <td></td>
         <% end %>
         
    <td><% if current_user.already_favorited?(@book)%>
     <p>
      <%= link_to book_favorites_path(@book), method: :delete do %>
        ♥<%= @book.favorites.count %> 
      <% end %>
     </p>
      <% else %>
     <p>
      <%= link_to book_favorites_path(@book), method: :post do %>
      ♡<%= @book.favorites.count %> 
      <% end %>
     </p>
      <% end %>
    </td>
    <td>
     <p>コメント数：<%= @book.book_comments.count %></p>
    </td>
    <table>
    <td>
    <% @book.book_comments.each do |book_comment| %>
     <tr><%= image_tag book_comment.user.get_profile_image, size:"100x100" %></tr>
     
     <td><%= book_comment.user.name %></td>
      <% if book_comment.user == current_user %>
      <%= book_comment.comment %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
      <% end %>  
    <% end %>
    </td>
    </table>
    <tr></tr>
    <td>
     <%= form_with model: [@book, @book_comment] do |f| %>
     <%= f.text_area :comment, rows: '5' %>
     <%= f.submit "送信" %>
     <% end %>
    </td>
    
      </table>
    </div>
  </div>
</div>